{
  "name": "plinko",
  "version": "0.1.0",
  "main": "src/main.js",
  "scripts": {
    "build": "rm -rf dist/ && npm run build:rollup && npm run build:test",
    "build:rollup": "rollup -c",
    "build:test": "mkdir -p dist/test && cd test && cp -a *.html ../dist/test",
    "watch": "concurrently --raw 'npm:watch:*'",
    "watch:rollup": "rollup -c -w",
    "watch:test": "npm-watch build:test"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "npm-watch": "^0.3.0",
    "rollup": "^0.64.1"
  },
  "dependencies": {
    "npm": "^6.4.0"
  },
  "private": true,
  "xo": {
    "space": 2,
    "globals": [
      "browser",
      "chrome",
      "window"
    ]
  },
  "watch": {
    "build:test": {
      "patterns": [
        "test"
      ],
      "extensions": [
        "html"
      ],
      "quiet": false
    }
  }
}
